root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
tab_width = 4

[*.rb]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

[*.{cs,java}]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

[*.{html,ejs,haml,pug,jade}]
indent_style = space
indent_size = 2

[*.{json,jsonc,yml,xml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
insert_final_newline = false